{
  "name": "tyomaestro-resursointi",
  "version": "0.1.0",
  "private": true,
  "description": "Älykäs työmaan hallintasovellus, joka yhdistää resurssisuunnittelun, työajanseurannan ja sähköiset työmääräykset yhteen mobiili- ja web-ratkaisuun.",
  "author": "Sami Turpeinen",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,scss,md}": "prettier --write"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "fix": "npm run format && npm run lint:fix"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "msw": "^2.12.3",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.5"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
